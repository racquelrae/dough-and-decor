service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow get, list: if request.auth.token.firebase.sign_in_provider == 'custom'
        && request.auth.token.email == 'firebase-adminsdk-fbsvc@dough-and-decor.iam.gserviceaccount.com';
    }
  }
}