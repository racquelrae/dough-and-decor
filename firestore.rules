rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User document itself
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // All nested docs/collections under the user (e.g., shoppingList)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}